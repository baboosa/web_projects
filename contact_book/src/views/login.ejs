<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Create or login</h1>
      <p class="text-center lead">Log in or create an account below</p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg">
          <h4>Register</h4>
          <p>New here? Then create your account</p>

          <form class="register-form" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Email address</label>
              <input type="email" class="form-control" name="email">
            </div>

            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>

        <div class="col-lg">
          <h4>Enter the system</h4>
          <p>You're already at home, log in to your account</p>

          <form class="login-form" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Email address</label>
              <input type="email" class="form-control" name="email">
            </div>

            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
